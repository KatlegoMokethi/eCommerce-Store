@model IQueryable<Product>
@{
    ViewData["Title"] = "T-Shirts";
}

<div class="container">
    <h1 id="Sweatpants" class="text-light">BAD ART SWEATPANTS</h1>
    <div class="card-columns">
        @foreach (Product p in Model)
        {
            <div class="card">
                <div class="card-body">
                    <img class="card-img" src="@p.ImagePath" alt="@p.Name">
                    <div class="card-text">
                        <h5 class="text-right">@p.Price.ToString("c")</h5>
                        <h3 style="font-family: Impact;">@p.Name</h3>
                        <p>@p.Description</p>
                        @if (@p.status == Status.Available)
                        {
                            <span class="btn-success p-1">Available</span>
                        }
                        else
                        {
                            <span class="btn-danger p-1">Out of stock</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
