<!DOCTYPE html>
<!-- Katlego Mokhethi-->
<!-- mokhethikatlego@gmail.com; YongzCreative Online Store-->
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Bootstrap CSS -->
    <link asp-href-include="lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link asp-href-include="/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link asp-href-include="lib/bootstrap/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link asp-href-include="lib/bootstrap/css/easy-responsive-tabs.css" rel="stylesheet" type='text/css' />
    <link asp-href-include="styles/style.css" rel="stylesheet" />
    <title>@ViewData["Title"] - YongzCreative Online Store</title>
</head>
<body>
    <!-- Navigation -->
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <a class="navbar-brand" href="#">YONGZ CREATIVE</a>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            Put something useful here later
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
    <!-- footer -->
    <footer style="background-color: black;">
        <!-- Footer Links -->
        <div class="container text-light text-center text-md-left mt-5 pt-5">
            <!-- Grid row -->
            <div class="row">
                <!-- About -->
                <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                    <!-- Content -->
                    <h6 class="text-uppercase font-weight-bold">YONGZ Online Store</h6>
                    <hr class="bg-light accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 180px;">
                    <p>
                        BAD ART (PTY) LTD is a retail company that incorporates art into it's designs.
                        It gives you both calm and chaotic styles of comfort wear.
                    </p>
                    <a asp-controller="About" asp-action="About">
                        ABOUT US
                    </a>
                </div>
                <!-- //About -->
                <!-- Navs -->
                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                    <!-- Links -->
                    <h6 class="text-uppercase font-weight-bold">QUICK NAVIGATION</h6>
                    <hr class="bg-light accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 150px;">
                    <p>
                        <a href="#">HOME</a>
                    </p>
                    <p>
                        <a href="#">CAPS</a>
                    </p>
                    <p>
                        <a href="#">SWEATERS</a>
                    </p>
                    <p>
                        <a href="#">HOODIES</a>
                    </p>
                    <p>
                        <a href="#">T-SHIRTS</a>
                    </p>

                </div>
                <!-- //Navs -->
                <!-- Contact -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                    <h6 class="text-uppercase font-weight-bold">CONTACT INFO</h6>
                    <hr class="bg-light accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 120px;">
                    <div class="contact">
                        <h6><i class="fa fa-envelope" aria-hidden="true"></i> Email address:</h6>
                        <p>
                            info@yonzstore.ac.za
                        </p>
                    </div>
                    <br />
                    <div class="contact">
                        <h6><i class="fa fa-phone-alt" aria-hidden="true"></i> Contact number:</h6>
                        <p>
                            +27 000 0000
                        </p>
                    </div>
                    <br />
                    <div class="contact">
                        <h6><i class="fa fa-map-marker" aria-hidden="true"></i> Location:</h6>
                        <p>
                            93 Park Road, Willows, Bloemfontein, 9300
                        </p>
                    </div>
                </div>
                <!-- Contact -->
                <!-- Socials -->
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                    <!-- Links -->
                    <h6 class="text-uppercase font-weight-bold">FOLLOW US:</h6>
                    <hr class="bg-light accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 90px;">
                    <br />
                    <!--Social buttons-->
                    <div class="social-buttons">
                        <!-- facebook  Button -->
                        <a href="https://www.facebook.com/ARTbyYONELA/" target="blank"
                           data-toggle="tooltip" data-placement="top" title="Facebook">
                            <div class="social-icon facebook">
                                <i class="fab fa-facebook" aria-hidden="true"></i>
                            </div>
                        </a>
                        <!-- pinterest Button -->
                        <a href="https://www.instagram.com/yongzcreative/" target="blank"
                           data-toggle="tooltip" data-placement="top" title="Instagram">
                            <div class="social-icon pinterest">
                                <i class="fab fa-instagram" aria-hidden="true"></i>
                            </div>
                        </a>
                        <!-- TwitterButton -->
                        <a href="https://twitter.com/yongzcreative" target="blank"
                           data-toggle="tooltip" data-placement="top" title="Twitter">
                            <div class="social-icon twitter">
                                <i class="fab fa-twitter" aria-hidden="true"></i>
                            </div>
                        </a>
                    </div>
                    <!--Social buttons-->
                </div>
                <!-- Grid row -->
            </div>
            <!-- Footer Links -->
            <!-- Copyright -->
            <div class="text-center text-muted">
                © 2020 YONGZcreative Store. All rights reserved
            </div>
        </div>
        <!-- Copyright -->
    </footer>

    <!-- JavaScript -->
    <script asp-src-include="lib/jquery/jquery.slim.min.js"></script>
    <script asp-src-include="lib/popper.js/popper.min.js"></script>
    <script asp-src-include="lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>