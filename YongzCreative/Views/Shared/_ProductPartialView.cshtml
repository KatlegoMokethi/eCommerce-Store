@model Product

<div class="card">
    <div class="card-body">
        <img class="card-img" src="@Model.ImagePath" alt="@Model.Name">
        <div class="card-text">
            <h5 class="text-right">@Model.Price.ToString("c")</h5>
            <h3 style="font-family: Impact;">@Model.Name</h3>
            <p>@Model.Description</p>
            @if (Model.status == Status.Available)
            {
                <span class="btn-success p-1 float-left">Available</span>

                <form id="@Model.ProductId" asp-action="AddToCart"
                      asp-controller="Cart" method="post">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" name="returnUrl"
                           value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <span class="card-text p-1">
                        @*@if (User.Identity.IsAuthenticated){*@
                        <button type="submit"
                                class="btn btn-success btn-sm pull-right float-right">
                            Add To Cart
                        </button>
                        @*}*@
                    </span>
                </form>
            }
            else
            {
                <span class="btn-danger p-1">Out of stock</span>
            }
        </div>
    </div>
</div>